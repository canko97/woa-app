{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    // "rootDir": ".",
    "outDir": "dist",
    "baseUrl": "./src"
  },
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": ["dist/**/*.ts"]
}
